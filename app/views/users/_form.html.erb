<%= form_for @user do |f| %>
   <%= f.label :name %><br>
   <%= f.text_field :name %><br>

   <%= f.label :min_height, "Height (in inches)" %><br>
   <%= f.number_field :height %><br>

   <%= f.label :happiness_rating, "How happy are you? (1-5 scale)" %><br>
   <%= f.number_field :happiness %><br>

   <%= f.label :nausea_rating, "How nauseous are you? (1-5 scale)" %><br>
   <%= f.number_field :nausea %><br>

   <%= f.label :tickets, "How many dollars are in your pocket?" %><br>
   <%= f.number_field :tickets %><br>

   <%= f.label :password %><br>
   <%= f.password_field :password %><br>

   <%= f.label :admin %>
   <%= f.check_box :admin %><br>

   <%= f.submit  %>
   <br>
<% end %>
